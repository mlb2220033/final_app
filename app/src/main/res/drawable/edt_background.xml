<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <!-- Đặt màu nền khi click -->
            <solid android:color="@color/Neutral_500" />
            <corners android:radius="20dp" />
        </shape>
        <!-- Đặt màu văn bản khi click -->
        <color android:color="@color/Neutral_100" />
    </item>
    <!-- Trạng thái khi được hover -->
    <item android:state_hovered="true">
        <shape android:shape="rectangle">
            <!-- Đặt màu nền khi hover -->
            <solid android:color="@color/Primary_700" />
            <corners android:radius="20dp" />
        </shape>
        <!-- Đặt màu văn bản khi hover -->
        <color android:color="@color/Neutral_500" />
    </item>
    <!-- Màu nền và màu văn bản mặc định -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/Neutral_200" />
            <corners android:radius="20dp" />
        </shape>
        <color android:color="@color/Primary_100" />
    </item>
</selector>