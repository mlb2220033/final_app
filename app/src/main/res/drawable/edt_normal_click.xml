<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when EditText is focused -->
    <item android:state_focused="true" android:state_window_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/Neutral_200" />
            <stroke
                android:width="2dp"
                android:color="@color/Primary_500" />
            <corners android:radius="15dp" />
            <color android:color="@color/Neutral_900"/>
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/Neutral_200" />
            <stroke android:width="0dp" />
            <corners android:radius="15dp"/>
            <color android:color="@color/Neutral_900"/>
        </shape>
    </item>
</selector>
