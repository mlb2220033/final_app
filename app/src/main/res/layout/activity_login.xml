<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".booking.LoginActivity">

    <ImageView
        android:id="@+id/imgL1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-45dp"
        android:layout_marginTop="-41dp"
        android:src="@drawable/topimg" />


    <ImageView
        android:id="@+id/imgL2"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_gravity="center"
        android:paddingTop="50dp"
        android:paddingBottom="30dp"
        android:src="@drawable/ic_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgL2"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/open_sans_bold"
        android:text="Welcome,Sign in!"
        android:textSize="26sp"
        android:textColor="@color/Primary_500"
        android:id="@+id/txtR1"/>


    <LinearLayout
        android:id="@+id/zoneInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtR1"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:fontFamily="@font/open_sans"
            android:paddingTop="5dp"
            android:text="User Name:" />

        <EditText
            android:id="@+id/edtUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edt_normal_click"
            android:ems="10"
            android:inputType="text"
            android:fontFamily="@font/open_sans"
            android:paddingStart="10dp"
            android:paddingTop="8dp"
            android:paddingEnd="10dp"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:fontFamily="@font/open_sans"
            android:paddingTop="5dp"
            android:text="Password:" />

        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edt_normal_click"
            android:ems="10"
            android:inputType="textPassword"
            android:fontFamily="@font/open_sans"
            android:paddingStart="10dp"
            android:paddingTop="8dp"
            android:paddingEnd="10dp"
            android:paddingBottom="8dp" />

        <CheckBox
            android:id="@+id/chkSaveLoginInfo"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:fontFamily="@font/open_sans"
            android:paddingTop="10dp"
            android:text="Save a login information"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/txtForgetPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:fontFamily="@font/open_sans"
            android:onClick="forgetPassword"
            android:paddingBottom="15dp"
            android:text="Forget Password?"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_hover_click"
            android:text="LOGIN"
            android:textColor="@color/Primary_100"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/open_sans"
            android:onClick="openHomeScreen"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="15dp"
            android:paddingBottom="10dp"
            android:layout_below="@id/btnLogin"
            android:fontFamily="@font/open_sans">

            <TextView
                android:id="@+id/txtHaveNoAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:fontFamily="@font/open_sans"
                android:text="No have an account?"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtHaveAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:fontFamily="@font/open_sans"
                android:onClick="signUpClicked"
                android:paddingStart="8dp"
                android:text="Sign Up"
                android:textColor="@color/Primary_500"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/or"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/zoneInfo"
        android:fontFamily="@font/open_sans"
        android:text="--- or ---"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"/>

    <LinearLayout
        android:id="@+id/OtherLogin"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/or"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/imgbtnLoginGoogle"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/button_logingg" />

        <ImageView
            android:id="@+id/imgbtnLoginFacebook"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/button_loginfb"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/imgL3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="-45dp"
        android:layout_marginTop="-41dp"
        android:layout_marginRight="-72dp"
        android:layout_marginBottom="-54dp"
        android:src="@drawable/topimg" />


</RelativeLayout>