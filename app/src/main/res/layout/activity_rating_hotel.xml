<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/RatingTitle"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:onClick="finish"
            android:src="@drawable/ic_cancel"
            app:tint="@color/Neutral_500" />

        <TextView
            android:layout_width="173dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:text="Add Rating Hotel"
            android:textColor="@color/Neutral_900"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                app:cardCornerRadius="20dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="25dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView33"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="Your Name"
                        android:textColor="@color/Neutral_900"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/edtUserName"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/edt_background"
                        android:ems="10"
                        android:hint="Enter here"
                        android:inputType="text"
                        android:paddingStart="15dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="10dp"
                        android:textCursorDrawable="@drawable/cursor_custom" />

                    <TextView
                        android:id="@+id/textView36"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:paddingStart="5dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="Your comment"
                        android:textColor="@color/Neutral_900"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/edtComment"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@drawable/edt_background"
                        android:ems="10"
                        android:gravity="top|start"
                        android:hint="Enter here"
                        android:inputType="textMultiLine"
                        android:overScrollMode="always"
                        android:paddingStart="15dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:scrollHorizontally="false"
                        android:textCursorDrawable="@drawable/cursor_custom" />

                    <TextView
                        android:id="@+id/textView37"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:paddingStart="5dp"
                        android:paddingTop="10dp"
                        android:text="How do you feel"
                        android:textColor="@color/Neutral_900"
                        android:textSize="18sp" />

                    <androidx.appcompat.widget.AppCompatRatingBar
                        android:id="@+id/ratingBarHotel"
                        android:layout_width="wrap_content"
                        android:layout_height="65dp"
                        android:layout_gravity="center"
                        android:layout_marginVertical="10dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:rating="3"
                        android:theme="@style/MyRatingBar" />

                    <TextView
                        android:id="@+id/txtRatingStar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:paddingBottom="8dp"
                        android:textAlignment="center"
                        android:textColor="@color/Primary_200"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnSendReview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/btn_blue_background"
                            android:paddingHorizontal="20dp"
                            android:paddingVertical="10dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:text="Send Reviews"
                            android:textColor="@color/Neutral_100" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnCancel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/btn_blue_background"
                            android:paddingHorizontal="20dp"
                            android:paddingVertical="10dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:text="Cancel"
                            android:textColor="@color/Neutral_100" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
