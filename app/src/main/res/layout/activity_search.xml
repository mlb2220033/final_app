<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/search_cardview"
    android:orientation="vertical"
    tools:context=".booking.SearchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_cancel"
            android:tint="@color/Neutral_200" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Search"
            android:textColor="@color/Neutral_100"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="100dp"
                app:cardCornerRadius="50dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginVertical="50dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="Find Your Hotel"
                        android:textColor="@color/Neutral_900"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/txtLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="15dp"
                        android:background="@drawable/edt_search"
                        android:paddingHorizontal="25dp"
                        android:paddingVertical="15dp"
                        android:layout_weight="1"
                        android:text="Location"
                        android:textColor="@color/Neutral_900"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/txtPeriod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="15dp"
                        android:background="@drawable/edt_search"
                        android:paddingHorizontal="25dp"
                        android:paddingVertical="15dp"
                        android:text="Period"
                        android:textColor="@color/Neutral_900"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/txtGuestRoom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="15dp"
                        android:background="@drawable/edt_search"
                        android:paddingHorizontal="25dp"
                        android:paddingVertical="15dp"
                        android:text="Guest"
                        android:textColor="@color/Neutral_900"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/txtMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="Message Error"
                        android:textColor="@color/Semantic_700"
                        android:textSize="16sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txtNear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="Message Error"
                        android:textColor="@color/Neutral_500"
                        android:textSize="16sp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/round_content">

                            <ImageView
                                android:id="@+id/imgNear"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_margin="8dp"
                                android:src="@drawable/ic_map"
                                android:tint="@color/Primary_500" />
                        </FrameLayout>

                        <TextView
                            android:id="@+id/txtSearch"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginVertical="20dp"
                            android:layout_marginStart="20dp"
                            android:background="@drawable/button_hover_click"
                            android:elevation="8dp"
                            android:gravity="center"
                            android:text="Search"
                            android:textColor="@color/Neutral_100"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>


            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="104dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/ic_travel"
            android:tint="@color/Neutral_500" />
    </RelativeLayout>


</LinearLayout>